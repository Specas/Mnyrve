# Declaring the license types for Eigen

licenses([
   "reciprocal",
   "notice",
])

package(default_visibility = ["//visibility:public"])

# Getting all the Eigen headers
EIGEN_HEADERS = glob(
    ["**"],
)

cc_library(
    name = "eigen",
    hdrs = EIGEN_HEADERS,

    # Allows import of only MPL2 licensed files
    defines = [
        "EIGEN_MPL2_ONLY",
    ],
)
 
